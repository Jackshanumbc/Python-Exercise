# coding: utf-8

n = input('Please input your target game size: ')
try : size = int(n)
except: print('Please input a number!')

def line(n):
    for i in range(n):
        row = ' '
        column = '|'
        for i in range(size): 
            row = row + '- '
            column = column + ' |'
        print('{row}'.format(row = row))
        print('{column}'.format(column = column))
    print('{row}'.format(row = row))
        
line(size)
